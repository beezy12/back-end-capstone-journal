
nav.navbar.navbar-default.mainNav
    .container-fluid
    .navbar-header
        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')


        a.navbar-brand.viewList(ui-sref="main").i.material-icons view_module
        a.navbar-brand.btn(ng-click="oneNote.updateEntry()") save
        a.navbar-brand.btn(ng-click='oneNote.deleteEntry()') delete

        a.btn#editor B
        a.btn#editor I
        a.btn#editor U




.container-fluid
    .row
        .col-md-11.col-md-offset-1
            div#journalTitle.moveDown(ng-click="editingTitle = true" ng-hide="editingTitle"){{oneNote.noteInfo.data.title}}
            input#journalTitle(ng-change="oneNote.edited = true ; saveTheEdit()" ng-blur="editingTitle = false" ng-show="editingTitle" ng-model="oneNote.noteInfo.data.title")


    .row
        .col-md-11.col-md-offset-1
            div#journalBox(ng-click="editing = true" ng-hide="editing"){{oneNote.noteInfo.data.entry}}
            textarea#journalBox(ng-change="oneNote.edited = true" ng-blur="editing = false" ng-show="editing" ng-model="oneNote.noteInfo.data.entry")



